pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ViktoriiaTimon/HomeWork.git'
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''
                    #!/bin/bash
                    apt-get update
                    apt-get install -y python3 python3-dev
                    apt-get install -y python3-pip
                    apt-get install -y python3.11-venv
                    rm -rf venv
                    python3 -m venv venv
                '''
            }
        }
        stage('Install requirements') {
            steps {
                sh '''
                    #!/bin/bash
                    . venv/bin/activate
                    pip install -r requirements.txt
                '''
            }
        }
        stage('Run tests') {
            steps {
                sh '''
                    #!/bin/bash
                    . venv/bin/activate
                    mkdir -p allure-results
                    pytest -m tests/test_create_user.py --alluredir=allure-results
                '''
            }
        }
    }
    post {
        always {
            emailext to: 'v4p3hrsurf@wyoxafp.com',
                     subject: "Build ${env.BUILD_NUMBER} - ${currentBuild.result}",
                     body: "Pipeline completed with status: ${currentBuild.result}. \n Check details at: ${env.BUILD_URL}"
        }
    }
}
